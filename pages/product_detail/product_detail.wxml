<!--pages/hot-detail/hot_detail.wxml-->
<view class="container">
  <bm-swiper image-class="image-style" swiper-class="swiper-style" autoplay="{{false}}" backgrounds="{{productDetail.images}}"></bm-swiper>
  <view class="detail-wrapper">
    <view class="header">
      <text class="price">{{productDetail.price}}</text>
      <text class="title">{{productDetail.title}}</text>
      <text class="updateTime">{{productDetail.updateTime}}</text>
      <view>
        <block wx:for="{{productDetail.tags}}">
          <bm-tag tagContent="{{item}}" class="tag"></bm-tag>
        </block>
      </view>
    </view>
    <view class="detail-title">-- 详情 --</view>
    <text class="content">{{productDetail.content}}</text>
  </view>
  <view class="footer" wx:if="{{showFooter}}">
    <button class="{{disableBtn ? 'button-disabled' : ''}}" type="default" disabled="{{disableBtn}}" size="default" plain="{{false}}" bind:tap="onTap" hover-class="button-hover">{{btnValue}}</button>
    <button wx:if="{{btnType=='publish' && showTakeOff}}" type="default" size="default" plain="{{false}}" bind:tap="onTakeoff" hover-class="button-hover">我不想卖了</button>
    <view wx:if="{{enFavor}}" class="favorBtn">
      <bm-favor favor="{{favor}}" bind:tapFavor="onFavor"></bm-favor>
    </view>
  </view>
  <mp-dialog title="提示" show="{{dialogShow}}" data-type="{{dialogContent.type}}" bindbuttontap="tapDialogButton" buttons="{{buttons}}">
    <view>{{dialogContent.text}}</view>
  </mp-dialog>
</view>

