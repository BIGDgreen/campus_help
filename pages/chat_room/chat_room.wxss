page {
  background-color: #f3f3f3;
}
.container .main-container .timeLine {
  color: #b3b3b3;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
}
.container .main-container .box {
  display: flex;
  width: 90%;
  margin: 0 auto;
  padding-top: 32rpx;
  margin-bottom: 20rpx;
}
.container .main-container .box .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.container .main-container .box .msg-box {
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
}
.container .main-container .box .image-box {
  padding: 10rpx 30rpx;
  width: 220rpx;
}
.container .main-container .right-box {
  flex-direction: row-reverse;
}
.container .main-container .right-box .msg-box {
  background-color: #fe443a;
  color: white;
  margin-right: 20rpx;
}
.container .main-container .left-box {
  flex-direction: row;
}
.container .main-container .left-box .msg-box {
  background-color: white;
  margin-left: 20rpx;
}
.container .footer {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  margin-bottom: 20rpx;
  background-color: #f2f2f2;
  border-top: 1px solid #e3e3e3;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.container .footer .addIcon {
  width: 70rpx;
  height: 70rpx;
  margin: 0 20rpx;
}
.container .footer .input-box {
  width: 62%;
  border-radius: 0.6rem;
  border: none;
  outline: none;
  height: 72rpx;
  margin-right: 20rpx;
  padding-left: 1rem;
  font-size: 1rem;
  background: white;
}
.container .footer .send-btn {
  background-color: #fe443a;
  font-weight: 500;
  border-radius: 0.5rem;
  width: 18%;
  color: white;
  border: none;
  outline: none;
  padding: 0.3rem 0;
  margin-right: 10rpx;
}
.container .footer .send-btn:hover {
  background-color: rgba(254, 68, 58, 0.6);
}
.container .footer .btnDisabled {
  background-color: rgba(254, 68, 58, 0.6);
}
