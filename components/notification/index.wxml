<!--components/notification/index.wxml-->
<view class="com-container">
  <view class="page__bd">
    <mp-cells>
      <mp-cell hover>
        <view slot="title" style="position: relative;margin-right: 10px;">
            <image src="{{avatar}}" style="width: 50px; height: 50px; display: block"/>
              <mp-badge wx:if="{{unread}}" style="position: absolute;top: -.7em;right: -.3em;"/>
        </view>
        <view>{{name}}</view>
        <view style="font-size: 13px;color: #888888;">{{latestNote}}</view>
      </mp-cell>
    </mp-cells>
  </view>
</view>
